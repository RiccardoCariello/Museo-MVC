@model Souvenir

<div class="container">
    <h2 class="mb-3">Modifica Il Souvenir</h2>
    <form asp-controller="Souvenir" asp-action="Update" asp-route-id="@Model.Id" method="post">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <label asp-for="Id" class="form-label">Id Souvenir</label>
            <input asp-for="Id" type="text" class="form-control" readonly>
        </div>
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Titolo</label>
            <input asp-for="Name" type="text" class="form-control" required>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label">Descrizione</label>
            <textarea asp-for="Description" rows="10" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Img" class="form-label">URL Immagine</label>
            <input asp-for="Img" type="text" class="form-control" required>
            <span asp-validation-for="Img" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Aggiorna Souvenir</button>
    </form>
</div>
