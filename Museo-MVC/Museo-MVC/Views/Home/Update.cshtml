@model Souvenir

<section class="CRUD_bg">
    <div class="container" style="color: #C38154;">
        <div class="card color card_border p-1 mt-2">
            <h2 class="mb-3">Modifica Il Souvenir</h2>
            <form asp-controller="Home" asp-action="Update" asp-route-id="@Model.Id" method="post">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label asp-for="Price" class="form-label">Price</label>
                    <input asp-for="Price" type="text" class="form-control" required>
                </div>
                <div class="col-3">
                    <label asp-for="Quantity" class="form-label">Quantità Disponibile</label>
                    <input asp-for="Quantity" type="text" class="form-control" readonly>
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Titolo</label>
                    <input asp-for="Name" type="text" class="form-control" required>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Descrizione</label>
                    <textarea asp-for="Description" rows="10" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Img" class="form-label">URL Immagine</label>
                    <input asp-for="Img" type="text" class="form-control" required>
                    <span asp-validation-for="Img" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Aggiorna Souvenir</button>
            </form>
        </div>
    </div>
</section>
